# Development Dockerfile

FROM php:8.2-fpm-alpine

# Install system dependencies
RUN apk add --no-cache \
    bash \
    git \
    curl \
    zip \
    unzip \
    libpng \
    libjpeg-turbo \
    libwebp \
    freetype \
    icu-dev \
    zlib-dev \
    oniguruma-dev \
    libxml2-dev

# Install PHP extensions required by Laravel
RUN docker-php-ext-install \
    pdo \
    pdo_mysql \
    mbstring \
    exif \
    pcntl \
    bcmath \
    intl \
    opcache

# Install Composer
COPY --from=composer:2.7 /usr/bin/composer /usr/bin/composer

WORKDIR /var/www

# Copy Composer files (specific to user-service)
COPY services/user-service/composer.json ./ 
COPY services/user-service/composer.lock* ./ 

# Install dependencies without scripts or interaction
RUN composer install --no-dev --prefer-dist --no-interaction --no-progress

# Copy the rest of the service source code
COPY services/user-service ./ 

# Ensure correct permissions for Laravel storage and cache
RUN chown -R www-data:www-data /var/www/storage /var/www/bootstrap/cache

# Expose Laravel Octane default port
EXPOSE 8000

# Start Laravel Octane with host 0.0.0.0 (so it works in Docker)
CMD ["php", "artisan", "octane:start", "--server=swoole", "--host=0.0.0.0", "--port=8000", "--watch"]
