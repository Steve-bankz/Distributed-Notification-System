# ======================================
# Development Dockerfile for user-service (Laravel)
# ======================================
FROM php:8.2-fpm-alpine

# Install system dependencies
RUN apk add --no-cache \
    bash \
    git \
    curl \
    zip \
    unzip \
    libpng \
    libjpeg-turbo \
    libwebp \
    freetype \
    icu-dev \
    zlib-dev \
    oniguruma-dev \
    libxml2-dev

# Install Composer
COPY --from=composer:2.7 /usr/bin/composer /usr/bin/composer

WORKDIR /var/www

# Copy composer files from the correct service directory
COPY services/user-service/composer.json ./
COPY services/user-service/composer.lock* ./

# Install dependencies
RUN composer install --prefer-dist --no-interaction --no-progress

# Copy full source code for this service
COPY services/user-service ./

# Expose port for Laravel Octane
EXPOSE 8000

# Start Octane in watch mode
CMD ["php", "artisan", "octane:start", "--watch", "--host=0.0.0.0", "--port=8000"]
